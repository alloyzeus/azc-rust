func (srv *{{.service_name}}ServerBase) create{{.type_name}}InstanceInsecure(
	inputCtx {{.pkg_name}}.CallInputContext,
) ({{.pkg_name}}.{{.ref_key_type_name}}, error) {
	ctxAuth := inputCtx.Authorization()

	const attemptNumMax = 5

	var err error
	var newInstanceIDNum {{.pkg_name}}.{{.id_num_type_name}}
	cTime := inputCtx.CallInputMetadata().ReceiveTime

	for attemptNum := 0; ; attemptNum++ {
		//TODO: obtain embedded fields from the argument which
		// type is {{.pkg_name}}.{{.type_name}}InstanceCreationInput .
		newInstanceIDNum, err = Generate{{.id_num_type_name}}(0)
		if err != nil {
			panic(err)
		}

		sqlString, _, _ := goqu.
			Insert({{unexported_field .type_name}}DBTableName).
			Rows(
				goqu.Record{
					{{unexported_field .type_name}}DBColIDNum: newInstanceIDNum,
					{{unexported_field .type_name}}DBColMDCreationTimestamp: cTime,
					{{unexported_field .type_name}}DBColMDCreationUserID: ctxAuth.UserIDNumPtr(),
					{{unexported_field .type_name}}DBColMDCreationTerminalID: ctxAuth.TerminalIDNumPtr(),
				},
			).
			ToSQL()

		_, err = srv.db.
			Exec(sqlString)
		if err == nil {
			break
		}

		pqErr, _ := err.(*pq.Error)
		if pqErr != nil &&
			pqErr.Code == "23505" &&
			pqErr.Constraint == {{unexported_field .type_name}}DBTablePrimaryKeyName {
			if attemptNum >= attemptNumMax {
				return {{.pkg_name}}.{{.ref_key_type_name}}Zero(), {{.base.azerrs_pkg}}.Op("insert max attempts").Wrap(err)
			}
			continue
		}

		return {{.pkg_name}}.{{.ref_key_type_name}}Zero(), {{.base.azerrs_pkg}}.Op("insert").Wrap(err)
	}

	//TODO: update caches, emit an event

	return {{.pkg_name}}.New{{.ref_key_type_name}}(newInstanceIDNum), nil
}

